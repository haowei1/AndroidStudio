<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/marquee"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:singleLine="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:ellipsize="marquee"
            android:textColor="#f42"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="你好,欢迎使用智慧交通,你可以实时的掌握路况,个人账户,公交,天气,以及停车场等服务."/>

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://192.168.1.6:8890/transportservice/type/jason/action/GetAllSense"
            android:singleLine="true"
            android:textSize="26sp"
        />

        <!-- android:text="http://192.168.1.6:8890/transportservice/type/jason/action/GetCarSpeed" -->
        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="volley获取数据"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="okhttp获取数据"
            android:textSize="20sp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="AllSense"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TestDB"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TrafficLight"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VideoView"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bus"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Notify"
            android:textSize="20sp"/>
    </LinearLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="数据"
            android:layout_margin="20dp"
            android:textColor="#000"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>